# N8N Copilot Shim - Environment Configuration
# Copy this file to .env and customize for your environment

# Default agent for new sessions
# Options: devops, family, projects, orchestrator, or any configured agent
COPILOT_DEFAULT_AGENT=orchestrator

# Default model for new sessions
# Examples: gpt-5-mini, gpt-5, claude-sonnet, gemini-1.5-flash
COPILOT_DEFAULT_MODEL=gpt-5-mini

# Default runtime for new sessions
# Options: copilot, opencode, claude, gemini, codex
COPILOT_DEFAULT_RUNTIME=copilot
